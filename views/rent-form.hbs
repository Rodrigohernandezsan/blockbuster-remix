<h2>{{title}}</h2>

<div class="all-rent-info">
  <div class="first-row">
    <div class="img-box">
      <img src="{{image}}" alt="cover-img">
    </div>

    <div class="basic-info"> 
      <p>For {{platform}}</p>
      <p>Genres: {{genre}} </p>
      <p>Release Date: {{releaseDate}}</p>
      <p>Metacritic Score: {{score}}</p>
      <p>Publisher: {{publisher}}</p>
      <p>ESBR Rating: {{rating}}</p>
    </div>
    <button class='is-alt' type='button'>Description</button>
    <div class="desc-info">
      <p>{{description}}</p>
    </div><br>
  </div>


