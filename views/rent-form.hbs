        <option value="14">14</option>
      </select> <br>

      <label for="Added total price">Total price</label>
      €<input name ="totalPrice" class="rent-price-sum" type="number" readonly style="background-color:lightgray" required="true">

      <div class="rent-btns">
        <button type="submit" class='is-primary'>Rent</button></a> <br>
        </form>
